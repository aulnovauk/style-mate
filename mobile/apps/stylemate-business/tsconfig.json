{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["../../packages/core/*"],
      "@ui/*": ["../../packages/ui/*"],
      "@theme/*": ["../../packages/theme/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx"
  ]
}
